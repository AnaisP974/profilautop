{% extends 'base.html.twig' %}

{% block title %}LinkedInMessage
{% endblock %}

{% block body %}
	<main class="container">
        <div class="row justify-content-center">
            <h1 class="text-center my-4">Message LinkedIn</h1>
            <div class="col-10 col-lg-8">
                <div class="h-100 p-5 bg-body-tertiary border rounded-3">
                    <h2>{{ jobOffer.title }}</h2>
                    <p>{{ linked_in_message.content }}</p>
                    <i><strong>Du : </strong>{{ linked_in_message.updatedAt ? linked_in_message.createdAt|date('Y-m-d') : '' }}</i>
                    <i><strong>Société : </strong>{{ jobOffer.company ? jobOffer.company : '' }}</i>
                    <div class="d-flex justify-content-around w-100 my-4">
                        <a href="{{ path('app_linked_in_message_index') }}"><button class="btn btn-light border border-1 rounded" type="button">Retour</button></a>
                        <a href="{{ path('app_linked_in_message_edit', {'id': linked_in_message.id}) }}"><button class="btn btn-secondary rounded" type="button">Modifier</button></a>
                        {{ include('linked_in_message/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

	</main>


	

{% endblock %}
