{% extends 'base.html.twig' %}

{% block title %}Messages Linkedin{% endblock %}

{% block body %}
<main class="container">
    <div class="d-flex justify-content-between my-4">
        <h1>Messages Linkedin</h1>
        <a href="{{ path('app_linked_in_message_new') }}">
            <button class="btn btn-light border border-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle" viewbox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                </svg>
            </button>
        </a>
    </div>

    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Création</th>
                <th>Mise à jour</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for linked_in_message in linked_in_messages %}
            <tr>
                <td>{{ linked_in_message.id }}</td>
                <td>{{ linked_in_message.content|slice(0, 100) }}...</td>
                <td>{{ linked_in_message.createdAt ? linked_in_message.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ linked_in_message.updatedAt ? linked_in_message.updatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_linked_in_message_show', {'id': linked_in_message.id}) }}" class="me-3" title="lire"><i class="bi bi-eye"></i></a>
                    <a href="{{ path('app_linked_in_message_edit', {'id': linked_in_message.id}) }}" title="modifier"><i class="bi bi-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun message Linkedin trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>

{% endblock %}
