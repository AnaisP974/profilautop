{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
    <h1>JobOffer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Company</th>
                <th>Link</th>
                <th>Location</th>
                <th>Salary</th>
                <th>ContactPerson</th>
                <th>ContactEmail</th>
                <th>ApplicationDate</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_offer in job_offers %}
            <tr>
                <td>{{ job_offer.id }}</td>
                <td>{{ job_offer.title }}</td>
                <td>{{ job_offer.company }}</td>
                <td>{{ job_offer.link }}</td>
                <td>{{ job_offer.location }}</td>
                <td>{{ job_offer.salary }}</td>
                <td>{{ job_offer.contactPerson }}</td>
                <td>{{ job_offer.contactEmail }}</td>
                <td>{{ job_offer.applicationDate ? job_offer.applicationDate|date('Y-m-d') : '' }}</td>
                <td>{{ job_offer.status }}</td>
                <td>
                    <a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}">show</a>
                    <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_offer_new') }}">Create new</a>
{% endblock %}
