{% extends 'base.html.twig' %}

{% block title %}Mes offres d'emplois
{% endblock %}

{% block body %}
	<main class="container">

		<div class="d-flex justify-content-between my-4">
			<h1>Mes offres d'emplois</h1>
			<a href="{{ path('app_job_offer_new') }}">
				<button class="btn btn-light border border-1">
					<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle" viewbox="0 0 16 16">
						<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
						<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
					</svg>
				</button>
			</a>
		</div>

		<table class="table table-striped table-hover">

			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Société</th>
					<th>Ville</th>
					<th>Salaire</th>
					<th>Date candidature</th>
					<th>Status</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for job_offer in job_offers %}
					<tr>
						<td>{{ job_offer.id }}</td>
						<td>{{ job_offer.title }}</td>
						<td>{{ job_offer.company }}</td>
						<td>{{ job_offer.location }}</td>
						<td>{{ job_offer.salary }}</td>
						<td>{{ job_offer.applicationDate ? job_offer.applicationDate|date('Y-m-d') : '' }}</td>
						<td>{{ job_offer.status.value }}</td>
						<td>
							<a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}" class="me-3" title="lire">
								<i class="bi bi-eye"></i>
							</a>
							<a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}" title="modifier">
								<i class="bi bi-pen"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="11">Aucune offre d'emploi enregistrée.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>


{% endblock %}
